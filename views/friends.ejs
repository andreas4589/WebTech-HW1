<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Friends of <%= email %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>Your Friends</h1>

    <% if (friends.length === 0) { %>
    <p>You don't have any friends yet.</p>
    <% } else { %>
    <ul>
      <% friends.forEach(friend => { %>
      <li>
        <a href="/users/profile/<%= friend.email %>">
          <strong><%= friend.firstName %> <%= friend.lastName %></strong>
        </a>
      </li>
      <% }) %>
    </ul>
    <% } %>

    <h2>Friend Requests</h2>
    <% if (requests.length === 0) { %>
    <p>No pending friend requests.</p>
    <% } else { %>
    <ul>
      <% requests.forEach(req => { %>
      <li>
        <strong><%= req.firstName %> <%= req.lastName %></strong><br />
        <% if (req.photo) { %>
        <img src="<%= req.photo %>" alt="photo" width="100" /><br />
        <% } %> <%= req.email %>
        <form
          action="/users/friend-request/accept"
          method="POST"
          style="display: inline"
        >
          <input type="hidden" name="sender" value="<%= req.email %>" />
          <button type="submit">Accept</button>
        </form>

        <form
          action="/users/friend-request/remove"
          method="POST"
          style="display: inline"
        >
          <input type="hidden" name="sender" value="<%= req.email %>" />
          <button type="submit">Remove</button>
        </form>
      </li>
      <% }) %>
    </ul>
    <% } %>

    <a href="/users/home/<%= email %>">Back to Home</a>
  </body>
</html>
