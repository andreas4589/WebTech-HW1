<!--
Dynamic page where the user can edit his profile
-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/styles.css">
    <script src="/js/script.js" type="module"></script>
</head>
<body>
    <header>      
        <h1 class="banner">My Profile</h1>
    </header>
    <nav>
        <a href="/users/home/<%= email %>">Home</a>
        <a href="/users/profile/<%= email %>">View Profile</a>
        <a href="/users/profile/edit/<%= email %>">Edit Profile</a>
        <a href="/users/courses/<%= email %>">My Courses</a>
        <a href="/users/friends/<%= email %>">Friends</a>
        <a href="/users/message-box/<%= email %>">Check your messages</a>
        <a href="/users/write-message">Write messages</a>
    </nav>
    <form action="/users/authentication/register/update" method="post" id="login-container">
        <label for="firstName">First name:</label>
        <input type="text" id="firstName" name="firstName" value = <%=fname%> required>
        <label for="lastName">Last name:</label>
        <input type="text" id="lastName" name="lastName" value = <%=lname%> required>
        <label for="age">Age:</label>
        <input type="text" id="age" name="age" value = <%=age%> required>
        <label for="email">E-mail address:</label>
        <input type="text" id="email" name="email" value = <%= email %> readonly>
        <label for="photo">Photo:</label>
        <input type="text" id="photo" value = <%=photo%> name="photo">
        <label for="program">Program / Major:</label>
        <select name="program" id="program">
            <option value="Computer Science" <%= program === "Computer Science" ? "selected" : "" %>>Computer Science</option>
            <option value="Artificial Intelligence" <%= program === "Artificial Intelligence" ? "selected" : "" %>>Artificial Intelligence</option>
            <option value="Mathematics" <%= program === "Mathematics" ? "selected" : "" %>>Mathematics</option>
            <option value="Physics" <%= program === "Physics" ? "selected" : "" %>>Physics</option>
            <option value="Biology" <%= program === "Biology" ? "selected" : "" %>>Biology</option>
            <option value="Chemistry" <%= program === "Chemistry" ? "selected" : "" %>>Chemistry</option>
            <option value="Engineering" <%= program === "Engineering" ? "selected" : "" %>>Engineering</option>
          </select>          
        <label for="hobbies">Hobbies:</label>
        <i>fill in your hobbies like this: hobbie1, hobie2, hobbie3, ...</i>
        <input type="text" id="hobbies" name="hobbies" value = <%=hobbies%> required>
        <label for="courses">Courses:</label>
        <i>select multiple courses by keeping ctrl (or cmd for mac) pressed</i>
        <select id="courses" name="courses" multiple size="5">
            <option value="Informatica Softwareproject">Informatica Softwareproject</option>
            <option value="Databases">Databases</option>
            <option value="Functioneel Programmeren">Functioneel Programmeren</option>
            <option value="Onderzoeksmethoden voor Informatica">Onderzoeksmethoden voor Informatica</option>
            <option value="Machine Learning">Machine Learning</option>
            <option value="Security">Security</option>
            <option value="Computationele Intelligentie">Computationele Intelligentie</option>
            <option value="Algoritmiek">Algoritmiek</option>
            <option value="Discrete Wiskunde">Discrete Wiskunde</option>
            <option value="Intelligente Systemen">Intelligente Systemen</option>
            <option value="Webtechnologie">Webtechnologie</option>
            <option value="Software Testing en Verificatie">Software Testing en Verificatie</option>
        </select>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
        <button class="button-style" type="submit">Edit Profile</button>
    </form>
</body>
</html>